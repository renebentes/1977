@model ChangePasswordViewModel

@{
  ViewData["Title"] = "Modificar senha";
  Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewData["Title"]</h2>

@await Html.PartialAsync("_StatusMessage", Model.StatusMessage);

<div class="row">
    <div class="col-md-4">
        <form  method="post">
            <div class="text-danger" asp-validation-summary="All"></div>

            <div class="form-group">
                <label asp-for="OldPassword"></label>
                <input asp-for="OldPassword" class="form-control" disabled/>
            </div>

            <div class="form-group">
                <label asp-for="NewPassword"></label>
                <input asp-for="NewPassword" class="form-control" disabled/>
            </div>

            <div class="form-group">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control" disabled/>
            </div>

            <div class="form-group">
                <button class="btn btn-secondary" type="submit">Salvar</button>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")
}